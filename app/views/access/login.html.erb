<div class="login">
  <%= form_tag(attempt_login_path, :method => :post) do %>
  <table>
    <tr>
      <td><%= label_tag(:name) %></td>
      <td><%= text_field_tag(:name) %></td>
    </tr>
    <tr>
      <td><%= label_tag(:password) %></td>
      <td><%= password_field_tag(:password) %></td>
    </tr>
    <tr>
      <td>&nbsp;</td>
      <td><%= submit_tag("Log In") %></td>
    </tr>
  </table>
  <% end %>
</div>
